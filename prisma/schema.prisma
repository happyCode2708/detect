datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:congacon@localhost:5432/ocr"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  name     String?
  role     Role     @default(USER)
}

model Product {
  id              String    @id @default(uuid())
  ixoneID         String    @unique
  validationResult String?
  images          Image[]
  extractSessions ExtractSession[]
}

model ExtractSession {
  id         String   @id @default(uuid())
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  createdAt  DateTime @default(now())
  status     String
  folderPath String
}

model Image {
  id        String   @id @default(uuid())
  url       String
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}